{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "importHelpers": true,
    "jsx": "react",
    "alwaysStrict": true,
    "sourceMap": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitAny": false,
    "noImplicitThis": false,
    "strictNullChecks": false,
    "outDir": "./build",
    "baseUrl": ".",
    "paths": {
      "@config/*": ["src/config/*"],
      "@models": ["src/models/"],
      "@models/*": ["src/models/*"],
      "@server/*": ["src/*"],
      "@middlewares": ["src/middlewares/"],
      "@middlewares/*": ["src/middlewares/*"],
      "@definitions": ["src/definitions/"],
      "@definitions/*": ["src/definitions/*"],
      "@tests/*": ["__tests__/*"],
      "@utils": ["src/utils/"],
      "@utils/*": ["src/utils/*"],

      "@validations": ["src/validations/"],
      "@validations/*": ["src/validations/*"],
      "@v1-tests/*": ["src/v1/__tests__/*"],
      "@v1-routes": ["src/v1/routes/"],
      "@v1-routes/*": ["src/v1/routes/*"],
      "@v1-controllers": ["src/v1/controllers/"],
      "@v1-controllers/*": ["src/v1/controllers/*"],
      "@v1-definitions": ["src/v1/definitions/"],
      "@v1-definitions/*": ["src/v1/definitions/*"],
      "@v1-services": ["src/v1/services/"],
      "@v1-services/*": ["src/v1/services/*"],
      "@v1-validations": ["src/v1/validations/"],
      "@v1-validations/*": ["src/v1/validations/*"]
    },
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/v1/**/*", "__tests__/**/*", "migrations/*"],
  "exclude": ["node_modules", "build"]
}
